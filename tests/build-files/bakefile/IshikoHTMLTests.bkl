ishikopath = envvar("ISHIKO_CPP_ROOT");
import $(ishikopath)/html/include/Ishiko/HTML.bkl;
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;

toolsets = gnu vs2022 vs2019 vs2017 vs2015;

gnu.makefile = ../gnumake/GNUmakefile;
vs2022.solutionfile = ../vc17/IshikoHTMLTests.sln;
vs2019.solutionfile = ../vc16/IshikoHTMLTests.sln;
vs2017.solutionfile = ../vc15/IshikoHTMLTests.sln;
vs2015.solutionfile = ../vc14/IshikoHTMLTests.sln;

program IshikoHTMLTests : IshikoHTML, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFrameworkCore IshikoConfiguration IshikoXML IshikoFileSystem IshikoIO IshikoProcess IshikoTime IshikoText IshikoErrors IshikoBasePlatform;
        libs += fmt boost_filesystem;
    }


    headers
    {
        ../../src/HTMLParserTests/HTMLParserTests.h
    }

    sources
    {
        ../../src/main.cpp
        ../../src/HTMLParserTests/HTMLParserTests.cpp
    }
}
